    caddy:
        image: caddy:latest
        restart: unless-stopped
        ports:
            - '${APP_PORT:-80}:80'
            - '${APP_SECURE_PORT:-443}:443'
            - '${VITE_PORT:-5173}:${VITE_PORT:-5173}'
        volumes:
            - './Caddyfile:/etc/caddy/Caddyfile'
            - sail-caddy:/data
            - sail-caddy:/config
        networks:
            - sail